includeConfig 'conf/modules.config'

conda.enabled = true
report.overwrite = true

executor {
    name = 'local'
	cpus = 24
	memory = '256GB'
}

params{
    Read1Tail = "AGATCGGAAGAGCACACGTC"
    Read2Tail = "AGATCGGAAGAGCGTCGTGT"
    pos1 = 11
    pos2 = 18
    posR2 = 8
    xNs = "NNNNNNNNNN"
    FIXSEQ = "AGTGACAC"
    BWATHREADS = 20

    // HPA settings
    PAMlen = 4
    PAMpos = 3
}
params{
    // Path to conda env
    r_conda = "/data2/lawrence/miniconda3/envs/r_conda"
    //guide_seq_conda = "/data2/keycron/miniconda3/envs/guideseq_mb"
    guide_seq_conda = "/data2/lawrence/miniconda3/envs/genomePAM"
    // Path to utilities
    BBMAPDIR = "/data2/apps/bbmap/"
    GUIDESEQDIR = "/data2/apps/guideseq/guideseq"
    SNPEFFDIR = "/data2/apps/snpEff"
    BWA = "/usr/bin/bwa"
    // Please set the path to the reference genome
    // Reference genome (bwa indexed)
    hg38 = "/data2/database/reference_genome/human/GRCh38_dsODN/GRCh38_noAlt_plus_dsODN.fna"
}
